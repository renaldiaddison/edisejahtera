generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        Int              @id @default(autoincrement())
  name      String
  npwp      String
  invoices  Invoice[]
  branches  CustomerBranch[]
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  @@map("customers")
}

model CustomerBranch {
  id                   Int       @id @default(autoincrement())
  customerId           Int       @map("customer_id")
  customer             Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  address              String
  city                 String?
  postalCode           String?   @map("postal_code")
  phone                String?
  email                String?
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")
  deliveryNoteInvoices Invoice[] @relation("DeliveryNoteBranch")
  invoiceInvoices      Invoice[] @relation("InvoiceBranch")

  @@map("customer_branches")
}

model Item {
  id             Int             @id @default(autoincrement())
  name           String
  unit           String
  price          Decimal         @db.Decimal(15, 2)
  stockQuantity  Int             @map("stock_quantity")
  invoiceDetails InvoiceDetail[]
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")

  @@map("items")
}

model Invoice {
  id                   Int             @id @default(autoincrement())
  invoiceNumber        String          @unique @map("invoice_number")
  customerId           Int             @map("customer_id")
  customer             Customer        @relation(fields: [customerId], references: [id])
  date                 DateTime        @default(now())
  poNumber             String?         @map("po_number")
  subtotal             Decimal         @db.Decimal(15, 2)
  dpp                  Decimal         @db.Decimal(15, 2)
  dppRateNumerator     Int             @map("dpp_rate_numerator")
  dppRateDenominator   Int             @map("dpp_rate_denominator")
  taxRateNumerator     Int             @map("tax_rate_numerator")
  taxRateDenominator   Int             @map("tax_rate_denominator")
  ppn                  Decimal         @db.Decimal(15, 2)
  total                Decimal         @db.Decimal(15, 2)
  invoiceDetails       InvoiceDetail[]
  deliveryNoteBranchId Int             @map("delivery_note_branch_id")
  deliveryNoteBranch   CustomerBranch  @relation("DeliveryNoteBranch", fields: [deliveryNoteBranchId], references: [id])
  invoiceBranchId      Int             @map("invoice_branch_id")
  invoiceBranch        CustomerBranch  @relation("InvoiceBranch", fields: [invoiceBranchId], references: [id])
  createdAt            DateTime        @default(now()) @map("created_at")
  updatedAt            DateTime        @updatedAt @map("updated_at")

  @@map("invoices")
}

model InvoiceDetail {
  invoiceId Int      @map("invoice_id")
  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  itemId    Int      @map("item_id")
  item      Item     @relation(fields: [itemId], references: [id])
  quantity  Int
  price     Decimal  @db.Decimal(15, 2)
  unit      String
  subtotal  Decimal  @db.Decimal(15, 2)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@id([invoiceId, itemId])
  @@map("invoice_details")
}
